<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3d3d48" />
            <corners android:topLeftRadius="0dip" android:topRightRadius="3dip"
                     android:bottomLeftRadius="0dip" android:bottomRightRadius="3dip" />
            <size
                android:width="86dp"
                android:height="34dp" />
        </shape>
    </item>
    <item android:top="1dip" android:bottom="1dip" android:left="1px"
          android:right="1dip">
        <shape>
            <gradient android:startColor="#2b2b34"
                      android:endColor="#2b2b34"
                      android:type="linear" android:angle="90" android:centerX="0.5"
                      android:centerY="0.5" />
            <corners android:topLeftRadius="0dip" android:topRightRadius="3dip"
                     android:bottomLeftRadius="0dip" android:bottomRightRadius="3dip" />
            <size
                android:width="84dp"
                android:height="32dp" />
        </shape>
    </item>
</layer-list>