<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codoon.clubgps.ui.fragment.ControllerFragment">

    <FrameLayout
        android:id="@+id/map_fragment_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gps_no_signal_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:background="#AA000000"
            android:textColor="@android:color/white"
            android:text="@string/gps_no_signal_tips"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fake_signal_weak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号弱"/>

            <Button
                android:id="@+id/fake_signal_strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号强"/>

            <Button
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="close"/>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>

