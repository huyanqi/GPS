<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <com.codoon.clubgps.widget.CImageView
        android:layout_height="70dp"
        android:id="@+id/thum_iv"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"/>

    <TextView
        android:text="0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance_tv"
        android:textSize="33sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@+id/thum_iv"
        app:layout_constraintLeft_toRightOf="@+id/thum_iv"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_tv"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/distance_tv"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distance_tv"/>

    <TextView
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="@+id/distance_tv"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/distance_tv"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_history_avgpace"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/avg_pace_tv"
        app:layout_constraintBottom_toBottomOf="@+id/avg_pace_tv"
        app:layout_constraintTop_toTopOf="@+id/avg_pace_tv"/>

    <TextView
        android:text="@string/avg_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avg_pace_tv"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:text="@string/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_tv"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_history_duration"
        android:id="@+id/imageView3"
        app:layout_constraintRight_toLeftOf="@+id/duration_tv"
        app:layout_constraintBottom_toBottomOf="@+id/duration_tv"
        app:layout_constraintTop_toTopOf="@+id/duration_tv"/>
</android.support.constraint.ConstraintLayout>